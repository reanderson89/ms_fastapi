{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Docker",
            "type": "shell",
            "command": "./debug.sh",
            "problemMatcher": [],
            // "isBackground": true,
            "presentation": {
                "panel": "dedicated",
                "close": true,
                "reveal": "silent"
            }
        },
        {
            "label": "Wait for Debugger",
            "type": "shell",
            "command": [
                "while ! docker ps --filter 'name=milestones_api' --format '{{.Status}}' | grep 'Up'; do",
                "  sleep .5;",
                "done;",
                "while ! nc -z localhost 5677; do",
                "  sleep .5;",
                "done;",
                "sleep 2;",
                "echo 'Ready!'"
            ],
            "problemMatcher": [],
            "presentation": {
                "panel": "shared",
                "close": true,
                "reveal": "silent"
            }
        },
        {
            "label": "Docker Compose Logs",
            "type": "shell",
            "command": "docker-compose logs -f",
            "problemMatcher": [],
            "presentation": {
                "panel": "dedicated",
                "close": false,
                "focus": true
            }
        },
        {
            "label": "Close Docker Containers",
            "type": "shell",
            "command": "docker-compose down",
            "problemMatcher": [],
            "isBackground": true,
            "presentation": {
                "panel": "dedicated",
                "close": true,
                "focus": true
            }
        }

    ]
}
